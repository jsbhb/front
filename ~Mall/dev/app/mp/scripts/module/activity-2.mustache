<div id="activity-2-{{sign}}" v-cloak>
    <div class="activity-2-content">
        <div class="title">
            本周特卖
            <a href="/searchProduct.html?upShelves=1&tag=特卖商品">
                查看更多 >>
            </a>
        </div>
        <div class="goodsList-list">
            <div class="content-list">
                {{#each cont}}
                    <div class="list-item">
                    <a href="{{href}}" @click="setStatistics" id="{{goodsId}}">
                        <div class="shopImg">
                            <img src="{{picPath}}">
                            <img class="remark_icon" src="/images/platform/page/icon_hot.png" alt="中国供销海外购-正品保障、全网低价、跨境商品、海淘、网红爆品、明星同款">
                        </div>
                        <div class="shopName">{{title}}</div>
                        <div class="shopPrice">
                            <span class="text">￥{{price}}</span>
                            {{#enname}}
                                <span class="enname">￥{{enname}}</span>
                            {{/enname}}
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
